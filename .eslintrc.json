{
  "env": {
    "es2017": true,
    "browser": true,
    "node": true,
    "serviceworker": true,
    "mocha": true
  },
  "settings": {
    "react": {
      "version": "16.7"
    }
  },
  "extends": ["airbnb", "prettier"],
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["react"]
      }
    ],
    "no-use-before-define": ["error", {"functions": false}]
  }
}
